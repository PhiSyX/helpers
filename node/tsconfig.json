{
  "compilerOptions": {
    "target": "ES2018",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "<SOURCE_DIR>/*"
      ],
    }
  },
  "include": [
    "<SOURCE_DIR>/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
